# Harry School Mobile Apps Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_API_URL=your_api_url

# Feature Flags
EXPO_PUBLIC_ENABLE_AI_TASKS=true
EXPO_PUBLIC_ENABLE_VOICE_RECOGNITION=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info

# School Configuration
EXPO_PUBLIC_SCHOOL_NAME=Harry School
EXPO_PUBLIC_PRIMARY_COLOR=#1d7452
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,ru,uz